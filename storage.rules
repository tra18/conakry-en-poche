rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images des entreprises
    match /businesses/{businessId}/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null && 
        (request.auth.uid == resource.metadata.userId || 
         get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Images des actualités
    match /news/{newsId}/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Images des bannières
    match /banners/{bannerId}/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Images de profil utilisateur
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Lecture publique
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}


